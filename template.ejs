<!doctype html>
<html class="psg-theme" lang="en">
    <head>
        <meta charset="UTF-8">
        <title><%= projectName %></title>
        <style><%- codeStyle %><%- tmplStyle %><%- processedCSS %></style>
    </head>
    <body>
        <header class="masthead">
        <h1><%= projectName %></h1>
        <p class="lead">Generated by <a href="https://github.com/morishitter/postcss-style-guide">postcss-style-guide</a></p>
        </header>
        <% maps.forEach(function (map) { %>
        <div class="section">
            <% if (showCode) { %>
              <div class="col"><%- map.html %></div>
              <div class="col"><pre class="code"><code class="lang-css"><%- map.rule %></code></pre></div>
            <% } else {%>
              <div class="withoutCode"><%- map.html %></div>
            <% } %>
        </div>
        <% }) %>
    </body>
</html>

